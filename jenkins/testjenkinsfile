pipeline {
    agent {
        docker {
            image 'maven:3.9.2'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -e -Dmaven.repo.local=./m2 -DskipTests clean package'
                sh 'ls -l target/'  // List files in the target directory for debugging
            }
        }
        stage('Test') {
            steps {
                sh 'mvn -Dmaven.repo.local=./m2 test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                // Replace with the actual JAR name after verifying from the 'ls' output
                sh 'java -jar target/my-app-1.0.0.jar'
            }
        }
    }
}
